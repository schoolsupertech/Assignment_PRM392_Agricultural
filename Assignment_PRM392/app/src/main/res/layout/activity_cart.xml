<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.CartActivity">
    <TextView
            android:id="@+id/tvTitleCart"
            android:text="@string/cart"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imgBtnCartClose"
    />
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgBtnCartClose"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#656565"
            android:contentDescription="@string/close"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
    />
    <ListView
            android:id="@+id/lvCart"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvTitleCart"
    />
    <Button
            android:id="@+id/btnCheckOut"
            android:text="@string/check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginVertical="15dp"
            android:layout_below="@+id/lvCart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
    />
    <TextView
            android:id="@+id/tvTotalCart"
            android:text="@string/cart_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/lvCart"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/btnCheckOut"
    />

</RelativeLayout>